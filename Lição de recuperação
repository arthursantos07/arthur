Algoritmo "notasse"

Var
n1,n2,n3,n4,med:real

Inicio

escreval("Digite nota 1")
leia(n1)
escreval("Digite nota 2")
leia(n2)
escreval("Digite nota 3")
leia(n3)
escreval("Digite nota 4")
leia(n4)

med:=(n1+n2+n3+n4)/4

 se (med<3) entao 
    escreval("Aluno reprovado")
 senão
    se (med>=3e<7) entao
       escreval("Aluno em recuperação")
    senao
       se (med>7) entao
          escreval("Aluno aprovado")
       fimse
    fimse
fimse



finalgoritimo
